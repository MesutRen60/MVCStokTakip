@model MVC_StokTakip.MyModel.MyKategoriler
@{
    ViewBag.Title = "KategoriGetir";
}

<div class="row">
    <div class="col-md-12 mt-5">
        <div class="card p-2">
            <div class="card-header"><i class="fa fa-table"></i> Kategori Listesi</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 pull-left">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("KategoriGuncelle", "Kategoriler", FormMethod.Post))
                {
                    @Html.ValidationSummary() @*Tüm validationların alt alta gözükmesini sağlıyo*@
                    <h4 class="form-header text-uppercase">
                        <i class="fas fa-plus-square"></i> KATEGORİ EKLEME
                    </h4>
                    <div class="form-group row">
                        <label class="col-sm-3">Kategori ID gizli</label>
                        @*@Html.LabelFor(k => k.ID)*@
                        <div class="col-sm-9">
                            @Html.HiddenFor(k => k.ID, new { @class = "form-control" })
                            @*@Html.TextBoxFor(k => k.ID, new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Kategorİ Adı</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Kategori, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Kategori, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Açıklama</label>
                        <div class="col-sm-9">
                            @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control", @row = "5" })
                            @Html.ValidationMessageFor(m => m.Aciklama, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-footer">
                        <button id="btnEkle" type="submit" class="btn btn-success"><i class="far fa-save"></i> KAYDET</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form>
                    <h4 class="form-header text-uppercase" style="color:#ee0979;">
                        <i class="fas fa-warning"></i>İŞLEM ÖZETİ
                    </h4>
                    <div class="form-group row">
                        <label class="col-sm-3">Kategori ID</label>
                        <div class="col-sm-9">
                            @*@Html.HiddenFor(k => k.ID, new { @class = "form-control" })*@
                            @Html.DisplayFor(k => k.ID)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Kategorİ Adı</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(m => m.Kategori, new { @class = "La-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Açıklama</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(m => m.Aciklama)
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


