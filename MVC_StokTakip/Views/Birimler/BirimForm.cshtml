@model MVC_StokTakip.MyModel.MyBirimler
@{
    ViewBag.Title = "BirimEkle";
}

<div class="row">
    <div class="col-lg-8 pull-left">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("BirimKaydet", "Birimler", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" }) @*Tüm validationların alt alta gözükmesini sağlıyo*@
                    @Html.AntiForgeryToken()
                    <h4 class="form-header text-uppercase">
                        <i class="fas fa-plus-square"></i> BİRİM EKLEME
                    </h4>
                    <div class="form-group row">
                        <label class="col-sm-2">Birim Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Birim, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Birim, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control", @rows = "5" })
                            @Html.ValidationMessageFor(m => m.Aciklama, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.ID)
                    <div class="form-footer">
                        <button id="btnEkle" type="submit" class="btn btn-success"><i class="fa fa-plus-square"></i> KAYDET</button>
                    </div>


                }
            </div>
        </div>
    </div>
</div>


