@model MVC_StokTakip.Models.Entity.Kullanicilar
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>ŞifremiUnuttum</title>
    <!--favicon-->
    <link rel="icon" href="~/color-admin/assets/images/favicon.ico" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="~/color-admin/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- animate CSS-->
    <link href="~/color-admin/assets/css/animate.css" rel="stylesheet" type="text/css" />
    <!-- Icons CSS-->
    <link href="~/color-admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <!-- Custom Style-->
    <link href="~/color-admin/assets/css/app-style.css" rel="stylesheet" />
</head>


<body class="authentication-bg">
    <!-- Start wrapper-->
    <div id="wrapper">
        <div class="card card-authentication1 mx-auto my-5 animated zoomIn bg-dark">
            <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/color-admin/assets/images/logo-icon.png" />
                    </div>
                    <div class="card-title text-uppercase text-center py-2 text-white">ŞİFRE SIFIRLAMA</div>

                    <div>
                        @if (ViewBag.hata != null)
                        {

                            <div class="alert alert-warning alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times-circle"></i></button>
                                <div class="alert-icon contrast-alert">
                                    <i class="icon-close"></i>
                                </div>
                                <div class="alert-message">
                                    <span><strong>Dikkat!</strong> @ViewBag.hata</span>
                                </div>
                            </div>
                        }
                    </div>
                  <br />
                    <br />


                    @using (Html.BeginForm("ResetPassword", "Kullanicilar", FormMethod.Post))
                    {
                        <div class="form-group">
                            <div class="position-relative has-icon-left">
                                <label for="exampleInputUsername" class="sr-only">Username</label>
                                @*<input type="text" id="exampleInputUsername" class="form-control" placeholder="kullanıcıadı">*@
                                @Html.TextBoxFor(k => k.Email, new { @class = "form-control",@placeholder="e-mail" })
                                <div class="form-control-position">
                                    <i class="icon-envelope-open"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-danger btn-block waves-effect waves-light">
                                <div class="row justify-content-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-retweet fa-2x"></i>
                                    </div>
                                    &nbsp;
                                    <div class="d-flex align-items-center">
                                         ŞİFREYİ SIFIRLA
                                    </div>
                                </div>
                                
                               

                            </button>
                        </div>
                       
                    }

                </div>
            </div>
        </div>

        <!--Start Back To Top Button-->
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> sdsds</a>
        <!--End Back To Top Button-->
    </div><!--wrapper-->
    <!-- Bootstrap core JavaScript-->
    <script src="~/color-admin/assets/js/jquery.min.js"></script>
    <script src="~/color-admin/assets/js/popper.min.js"></script>
    <script src="~/color-admin/assets/js/bootstrap.min.js"></script>
    <!-- waves effect js -->
    <script src="~/color-admin/assets/js/waves.js"></script>
    <!-- Custom scripts -->
    <script src="~/color-admin/assets/js/app-script.js"></script>

</body>
</html>
