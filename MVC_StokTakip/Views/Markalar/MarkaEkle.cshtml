@model MVC_StokTakip.ViewModels.DropdownViewModel

@{
    ViewBag.Title = "MarkaEkle";
}




<div class="row">
    <div class="col-lg-8 pull-left">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("MarkaEkle", "Markalar", FormMethod.Post))
                {
                    @Html.ValidationSummary() @*Tüm validationların alt alta gözükmesini sağlıyo*@
                    @Html.AntiForgeryToken()

                    <h4 class="form-header text-uppercase">
                        <i class="fas fa-plus-square"></i> KATEGORİ EKLEME
                    </h4>
                    @Html.HiddenFor(m => m.Marka.ID)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Marka.Kategoriler.Kategori, new { @class = "col-sm-2" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.SelectedKatId, Model.KategoriData, "......Lütfen Seçiniz......", new { @class = "form-control dropdown" })
                            @Html.ValidationMessageFor(m => m.SelectedKatId, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Marka.Marka, new { @class = "col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Marka.Marka, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Marka.Marka, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Marka.Aciklama, new { @class = "col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Marka.Aciklama, new { @class = "form-control", @row = "5" })
                            @Html.ValidationMessageFor(m => m.Marka.Aciklama, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-footer">
                        <button type="submit" class="btn btn-success"><i class="far fa-save"></i> KAYDET</button>
                    </div>
                }


            </div>
        </div>
    </div>
</div>



@section Validate
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}